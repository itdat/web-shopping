<!-- Begin Login Content Area -->
<div class="page-section mb-60">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb-30 container">
        <!-- Login Form s-->
        <form action="/login" method="POST">
          <div class="login-form">
            <h4 class="login-title">Đăng nhập</h4>
            <div class="row">
              <div class="col-md-12 col-12 mb-20">
                <label>Địa chỉ Email*</label>
                <input name="email" class="mb-0" type="email" placeholder="Địa chỉ Email">
              </div>
              <div class="col-12 mb-20">
                <label>Mật khẩu</label>
                <input name="password" class="mb-0" type="password" placeholder="Mật khẩu">
              </div>
              <div class="col-md-8">
                <div class="check-box d-inline-block ml-0 ml-md-2 mt-10">
                  <input type="checkbox" id="remember_me">
                  <label for="remember_me">Nhớ tài khoản</label>
                </div>
              </div>
              <div class="col-md-4 mt-10 mb-20 text-left text-md-right">
                <a href="#"> Quên mật khẩu?</a>
              </div>
              {{#if error}}
              <div class="col-md-12">
                <p class="text-danger font-italic">{{error}}</p>
              </div>
              {{/if}}
              <div class="col-md-12">
                <button class="register-button mt-0">Đăng nhập</button>
              </div>
              <div class="col-12 text-muted pt-3">
                <span>Chưa có tài khoản? </span><a href="/register">Đăng ký</a>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- Login Content Area End Here -->